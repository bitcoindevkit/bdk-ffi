default:
  just --list

build-macos:
  bash ./scripts/build-macos-aarch64.sh

clean:
  rm -rf ../bdk-ffi/target/
  rm -rf ./build/
  rm -rf ./lib/build/
  rm -rf ./plugins/build/

publish-local:
  ./gradlew publishToMavenLocal -P localBuild

test:
  ./gradlew test

test-offline:
  ./gradlew test -P excludeConnectedTests

test-specific TEST:
  ./gradlew test --tests {{TEST}}
